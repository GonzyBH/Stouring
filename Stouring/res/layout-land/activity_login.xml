<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tourargent_wide_detail"
    android:orientation="horizontal">
    
		    <ImageView
                android:id="@+id/welcomeiamge"
                android:layout_width="0dp"
                android:paddingTop="10dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/hello_world"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/logo_welcome" />
		    
		    <LinearLayout
		        android:layout_weight="2"
			    android:layout_width="0dp"
			    android:gravity="center"
			    android:layout_height="match_parent"
			    android:paddingBottom="12dp"
			    android:paddingTop="12dp"
		        android:orientation="vertical">
				

			<Button
				android:id="@+id/buttonstouring"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginBottom="12dp"
				android:paddingLeft="12dp"
				android:paddingRight="10dp"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:textColor="#EEEEEE"
				android:textSize="14sp"
				android:drawableLeft="@drawable/stouring_couleur"
				android:gravity="right|center_vertical"
				android:background="@drawable/button_login_stouring" />
			
			<Button
				android:id="@+id/buttonfacebook"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginBottom="12dp"
				android:paddingLeft="13dp"
				android:paddingRight="10dp"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:textColor="#EEEEEE"
				android:textSize="14sp"
				android:drawableLeft="@drawable/logofacebook"
				android:gravity="right|center_vertical"
				android:background="@drawable/button_login_facebook" />
			
			<Button
				android:id="@+id/buttontwitter"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginBottom="12dp"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:textColor="#EEEEEE"
				android:textSize="14sp"
				android:drawableLeft="@drawable/logotwitter"
				android:gravity="right|center_vertical"
				android:background="@drawable/button_login_twitter" />
			
			<Button
				android:id="@+id/buttongoogle"
				android:layout_width="match_parent"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_height="wrap_content"
				android:paddingLeft="12dp"
				android:paddingRight="10dp"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:textColor="#EEEEEE"
				android:textSize="14sp"
				android:gravity="right|center_vertical"
				android:drawableLeft="@drawable/logogoogle"
				android:background="@drawable/button_login_google" />
			
			</LinearLayout>


</LinearLayout>
